<div class="top-banner user-banner">

  <div class="container">
    <div class="user-info">
      <h3><%= @user.username %></h3>
      <%= @user.tag_list %>
      <h3>Location: <%= @user.location %></h3>
      <p>Bio: <%= @user.bio %></p>
    </div>
  </div>
</div>
<div class="container">
  <div class="m-3">
    <h1>
      <%= @user.username %>'s projects
    </h1>
  </div>
</div>
<div class="container">
  <div class="project">
    <% @projects.each do |project| %>
      <div class="card">
        <h2><%= project.name %></h2>
        <%= project.description %>
        <% if @user == current_user %>
          <button class="btn btn-primary edit-btn">Check requests</button>
          <div class="edit-form">
              <% project.matches.each do |match| %>
                <%= link_to "From #{match.user.username}", user_path(match.user)  %>
                <%= match.role %>
                <%= simple_form_for match do |f| %>
                  <%= f.input :status, as: :hidden, input_html: { value: 'accepted' }  %>
                  <%= f.submit 'accept' %>
                <% end %>
                <%= simple_form_for match do |f| %>
                  <%= f.input :status, as: :hidden, input_html: { value: 'rejected' }  %>
                  <%= f.submit 'reject' %>
                <% end %>
              <% end %>
          </div>
        <% else %>
            <% project.tag_list.each do |tag| %>
              <%= tag %>
            <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

  <div class="m-3">
    <h1>Requested projects</h1>
  </div>
  <% if @matches.any? %>
    <div class="cards">
      <% @matches.each do |match| %>
        <div class="card-background">
            <%= render 'projects/card', project: match.project %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="m-3">
      <h3>You haven't requested yet...</h3>
    </div>
  <% end %>



