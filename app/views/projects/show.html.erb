<div class="container">
  <div>
<!-- Banner -->
  <div>
    <%= render 'banner'%>
  </div>

<!-- Whole project info div -->
  <div class="project-info row">

<!-- Project name, description and images -->
    <div class="col-9">
      <div class="p-4">
        <div class="project-name pb-3">
          <h3 style="display: inline;">Project Name: </h3>
          <h4 style="display: inline;"><%= @project.name %></h4>
        </div>

        <div class="description pb-3">
          <p><%= @project.description %></p>
        </div>

        <div class="images-div row justify-content-center">
          <% if @project.photo.attached? %>
          <div class="img-div">
            <%= cl_image_tag @project.photo.key, height: 200, width: 300, crop: :fill %>
          </div>
          <div class="img-div">
            <%= cl_image_tag @project.photo.key, height: 200, width: 300, crop: :fill %>
          </div>
          <% end %>
        </div>
      </div>
    </div>

<!-- Mebmer info and roles looking for -->
    <div class="members-bar col-3">
      <div class="pt-5 pb-5">
        <h4><strong>Looking for</strong></h4>
        <ul class="skills">
          <% @project.tag_list.each do |tag| %>
            <div class="d-flex justify-content-start">
              <i class="fas fa-robot mr-2"></i>
              <li><%= tag %></li>
            </div>
          <% end %>
        </ul>
        <h4><strong>Members</strong></h4>
        <div class="members">
          <%= link_to @project.user.username, user_path(@project.user), class: "member-link" %>

        </div>
        <div class="buttons mt-3">
          <% if @match.id  %>
            <div class="request-button btn btn-secondary btn-block"><%= @match.status %></div>
          <% else %>
            <%= simple_form_for [@project, @match] do |f| %>
              <%= f.input :project_id, as: :hidden, input_html: { value: @project.id } %>
              <%= f.submit 'Join our team' %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</div>
</div>

