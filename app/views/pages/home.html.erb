<div class="container">
  <div class="cards">
    <% @projects.each do |project| %>
      <div class="card">
        <%= link_to project_path(project), class: "project-link" do  %>
        <%= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg", class: "card-img" %>
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar card-avatar" %>
        <h2><%= project.name %></h2>
        <% project.tag_list.each do |tag| %>
          <%= link_to tag, tagged_path(tag: tag) %>
        <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

